{
    "testEnvironment": "jsdom",
    "transform": {},
    "clearMocks": true,
    "setupFilesAfterEnv": [
        "@misonou/test-utils/mock/console",
        "@misonou/test-utils/mock/scrollBy",
        "@misonou/test-utils/mock/boxModel",
        "@misonou/test-utils/mock/visualViewport",
        "<rootDir>/tests/setup.js"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/build/"
    ],
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/index.js",
        "!src/include/**/*"
    ]
}
